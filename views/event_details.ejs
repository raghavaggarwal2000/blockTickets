<html>
    <head>
        <%- include('./partials/head.ejs') %>
        <style>
            .row{
                width: 100%;
                height: 100%;
                padding: 10%;
                padding-top: 4%;
                margin: 40px 0;
            }
            .column{
                float: left;
                width: 50%;
                padding: 10px;
                height: 100%; /* Should be removed. Only for demonstration */
            }
            .column img{
                border-radius: 5%;
            }
            .column .desc{
                border: 2px solid grey;
                height: 100%;
                margin-top: 30px;
                padding: 20px;
            }

            hr{
                border-width: 4px;
                border-color: #E3E3E3;
                width: 90%;
                text-align: center;
            }
            .footer{
                margin-top: 250px;
            }
            .column .right{
                padding: 20px;
            }

            p span{
                color: #8A8A8A;
            }
            .details{
                color: #212121;
                font-weight: bold;
            }
            button{
                width: 100%;
                background-color: #042469;
                color: white;
                height: 50px;
                font-weight: bold;
            }
            button a{
                color: white;
            }
        </style>
    </head>
<body>
    <%- include('./partials/nav.ejs') %>
        <div class="row">
            <div class="column">
                <img src="data:image/<%=result.image.contentType%>;base64,<%=result.image.data.toString('base64')%>" class="card-img-top" alt="...">
                 <div class="desc">
                    <h3>Event Description</h3>
                    <hr>
                    <p><%= result.description %></p>
                 </div> 
            </div>
            <div class="column">
                <div class="right">
                    <h2><%= result.name %></h2><br>
                    <p class="details"><span>Date</span><br>
                    <%= result.date %><br><br>
                    <span>Price</span><br>
                    <%= result.price %><br><br>
                    <span>Location</span><br>
                    <%= result.location %><br><br>
                    </p>
                    <a href ="/event_details/buy/<%= result._id %>"><button>Buy Now</button></a>
                </div>
            </div>
        </div>



    <%- include('./partials/footer.ejs') %>

</body>
</html>